<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ModularWeapons.ModularPartDef MayRequire="Ludeon.RimWorld.Biotech">
		<defName>guy762_beammod_baragwin</defName>
		<label>Baragwin thermal matrix</label>
		<kind>guy762_slot_beam_hvyrep</kind>
		<path>NoVisual</path>
		<description>Adds an additional attack verb which fires an energy beam that can ignite targets.</description>
		<massFactor>0.2</massFactor>
		<underbarrelVerb>
			<label>thermal beam</label>
			<description>Fire an energy beam that can ignite targets.</description>
			<iconPath>UI/Baragwin_Thermal_Beam</iconPath>
			<commandIcon>UI/Baragwin_Thermal_Beam</commandIcon>
			<verbClass>AthenaFramework.Verb_ShootRunningBeam</verbClass>
			  <hasStandardCommand>true</hasStandardCommand>
			  <warmupTime>5</warmupTime>
			  <range>25</range>
			  <stopBurstWithoutLos>false</stopBurstWithoutLos>
			  <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
			  <burstShotCount>25</burstShotCount>
			  <beamDamageDef>guy762_BeamDamage_energy</beamDamageDef>
			  <soundCastTail>GunTail_Medium</soundCastTail>
			  <muzzleFlashScale>9</muzzleFlashScale>
			  <soundCastBeam>kotorsound_stunbeam</soundCastBeam>
			  <beamGroundFleckDef>Fleck_BeamBurn</beamGroundFleckDef>
			  <beamFleckChancePerTick>0.32</beamFleckChancePerTick>
			  <beamMoteDef>guy762_Mote_StunBeam</beamMoteDef>
			  <beamEndEffecterDef>GraserBeam_End</beamEndEffecterDef>
			  <beamChanceToStartFire>0.35</beamChanceToStartFire>
			  <beamChanceToAttachFire>0.35</beamChanceToAttachFire>
			  <beamLineFleckDef>Fleck_BeamSpark</beamLineFleckDef>
			  <beamStartOffset>0</beamStartOffset>
			  <beamLineFleckChanceCurve>
				<points>
				  <li>(0, 0)</li>
				  <li>(0.65, 0.4)</li>
				  <li>(1, 0.75)</li>
				</points>
			  </beamLineFleckChanceCurve>
			  <ai_IsWeapon>true</ai_IsWeapon>
			  <onlyManualCast>true</onlyManualCast>
		</underbarrelVerb>
		<costList>
		  <ComponentSpacer>6</ComponentSpacer>
		</costList>
		<isRare>true</isRare>
	  </ModularWeapons.ModularPartDef>
	
	

	
	

</Defs>