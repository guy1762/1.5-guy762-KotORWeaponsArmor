  <ModularWeapons.ModularPartDef>
    <defName>guy762_armortech_kneerocket</defName>
    <label>knee-mounted micro-rocket launcher</label>
    <kind>guy762_slot_armortech</kind>
	<description>Adds an additional attack verb which fires a pair of micro-rockets.</description>
	<massFactor>0.2</massFactor>
    <EquipDelayFactor>-2</EquipDelayFactor>
	<underbarrelVerb>
		<label>mounted micro-rocket launcher</label>
		<description>Fire a pair of micro-rockets.</description>
		<iconPath>Items/droidweapon/droidweapon_microrocket</iconPath>
		<commandIcon>Items/droidweapon/droidweapon_microrocket</commandIcon>
		<verbClass>ModularWeapons.Verb_UnderbarrelUseOnce</verbClass>
		<hasStandardCommand>true</hasStandardCommand>
		<defaultProjectile>KotORRocket_micro</defaultProjectile>
		<warmupTime>1</warmupTime>
		<range>17</range>
		<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
		<burstShotCount>2</burstShotCount>
		<soundCast>kotorsound_smallrocket</soundCast>
		<soundCastTail>GunTail_Medium</soundCastTail>
		<muzzleFlashScale>9</muzzleFlashScale>
		<ai_IsWeapon>true</ai_IsWeapon>
		<onlyManualCast>true</onlyManualCast>
		
		<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
		<linkedBodyPartsGroup>Legs</linkedBodyPartsGroup>
	</underbarrelVerb>
	<costList>
	  <guy762_DroidWeapon_microrocket>1</guy762_DroidWeapon_microrocket>
	</costList>
	<isRare>true</isRare>
	<researchPrerequisites>
	  <li>guy762_ResearchKotOR_advupgrade</li>
	</researchPrerequisites>
  </ModularWeapons.ModularPartDef>
  
